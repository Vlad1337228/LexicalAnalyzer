        <Button Content="Старт" HorizontalAlignment="Left" Margin="35,240,0,0" VerticalAlignment="Top" Height="31" Width="360" Click="Button_Click"/>
        <Label Content="1) (110)*101(111)*&#xD;&#xA;2) (a|b|c|d) нет подстроки ad&#xD;&#xA;3) многострочный комментарий /*......*/" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Height="72" Width="780"/>
        <TextBox x:Name="textBox_errors" IsReadOnly="True" HorizontalAlignment="Center" Margin="0,276,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="716" Height="97" Background="#FFF0EAEA"/>

    </Grid>
</Window>
